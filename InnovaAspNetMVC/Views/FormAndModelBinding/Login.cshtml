@{
    // Sayfa başlığını belirlemek için ViewData kullanılır.
    ViewData["Title"] = "Login";

    // "message" adında bir değişken tanımlanır ve "Merhaba dünya" değeri atanır.
    var message = "Merhaba dünya";
}

@section Scripts
{
    <!-- Form doğrulama işlemi için gerekli JavaScript kütüphaneleri eklenir.-->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

@using System.Net
@model LoginViewModel

<!-- Ürün listesi için özel tag helper'lar kullanılır -->
<vc:product-list type="1"></vc:product-list>
<vc:product-list type="2"></vc:product-list>

<!-- "_Example_Login.cshtml" adlı kısmi görünüm sayfada kullanılır.
"message" değişkeni model olarak gönderilir. -->
<partial name="~/Views/PartialViews/_Example_Login.cshtml" model="message"/>

<!-- "_Login_Partial_View.cshtml" adlı kısmi görünüm sayfada kullanılır.
Model özelliği, sayfanın belirttiği LoginViewModel sınıfı ile doldurulacaktır. -->
<partial name="_Login_Partial_View" model="Model"/>
